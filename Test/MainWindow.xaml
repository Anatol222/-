<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox" Grid.Column="0" Grid.Row="0"></TextBox>
        <Label x:Name="label1" Grid.Column="1" Grid.Row="0"></Label>
        <Label x:Name="label2" Grid.Column="0" Grid.Row="1"></Label>
        <Button x:Name="But" Click="Btn_Click" Grid.Column="1" Grid.Row="1">
        </Button>
    </Grid>   
</Window>
